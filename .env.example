# Elevaite Platform - Environment Variables
# Copy this file to .env and fill in your values
#
#   cp .env.example .env

# ============================================================
# AI / LLM (Required for workflow execution)
# ============================================================
OPENAI_API_KEY=sk-proj-your-key-here
GEMINI_API_KEY=your-gemini-key-here

# ============================================================
# OAuth / Authentication (Required for login)
# ============================================================
# Google OAuth - get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-secret

# FusionAuth (optional, being deprecated)
FUSIONAUTH_CLIENT_ID=
FUSIONAUTH_CLIENT_SECRET=
FUSIONAUTH_API_KEY=

# ============================================================
# Databases (defaults work for local Docker setup)
# ============================================================
AUTH_DB_URL=postgresql+asyncpg://elevaite:elevaite@localhost:5433/auth
WORKFLOW_DB_URL=postgresql://elevaite:elevaite@localhost:5433/workflow_engine
INGESTION_DB_URL=postgresql://elevaite:elevaite@localhost:5433/elevaite_ingestion

# ============================================================
# Cache (defaults work for local Docker setup)
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=16379

# ============================================================
# Vector Database (defaults work for local Docker setup)
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ============================================================
# Service URLs (defaults work for local Docker setup)
# ============================================================
INGESTION_SERVICE_URL=http://localhost:8001
WORKFLOW_ENGINE_URL=http://localhost:8006
AUTH_API_URL=http://localhost:8004

# ============================================================
# AWS (Optional - for S3 file storage features)
# Leave empty to skip S3 features locally
# ============================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=
