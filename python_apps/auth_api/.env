SQLALCHEMY_DATABASE_URL="postgresql+asyncpg://elevaite:elevaite@localhost:5433/auth"

# Frontend URL for links in emails
FRONTEND_URL="http://localhost:3002"

# JWT settings
SECRET_KEY="SECRET_KEY"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# Email settings
SMTP_TLS="True"
SMTP_PORT="587"
SMTP_HOST="outbound.mailhop.org"
SMTP_USER="elevaite"
SMTP_PASSWORD="SMTP_PASSWORD"
EMAILS_FROM_EMAIL="noreply@iopex.ai"
EMAILS_FROM_NAME="iOPEX AI"

# Session expiration
REFRESH_TOKEN_EXPIRE_DAYS="90"

# Rate limiting
RATE_LIMIT_PER_MINUTE="60"

# CORS
CORS_ORIGINS=["http://localhost:3002", "http://localhost:8004"]

# Trusted hosts
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# AWS Configuration for SMS
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
# Custom sender ID for SMS
SMS_SENDER_ID=""  

EMAIL_MFA_GRACE_PERIOD_DAYS="30"

# Grace period auto-enable - Options: "email", "sms", "totp", "none"
MFA_AUTO_ENABLE_METHOD="email"

# Primary color for email templates
# Default: e75f33 (ElevAIte orange). Change to e61e1e for Toshiba deployments
MFA_EMAIL_PRIMARY_COLOR="e75f33"

# Branding name used throughout the application
BRANDING_NAME="ElevAIte"
BRANDING_ORG="iOPEX"
BRANDING_SUPPORT_EMAIL="support@iopex.ai"