# Local Development Environment Configuration
# Copy this file to .env for local development
# This configuration uses MailHog for email testing and test keys for JWT

# ============================================================================
# Database Configuration
# ============================================================================
SQLALCHEMY_DATABASE_URL="postgresql+asyncpg://elevaite:elevaite@localhost:5433/auth"

# Frontend URL for links in emails
FRONTEND_URL="http://localhost:3002"

# ============================================================================
# JWT settings - Test Keys (DO NOT use in production!)
# ============================================================================
SECRET_KEY="test-secret-key-do-not-use-in-production"
API_KEY_SECRET="test-secret-key-for-integration-tests"
ACCESS_TOKEN_EXPIRE_MINUTES="90"
REFRESH_TOKEN_EXPIRE_MINUTES="90"

# ============================================================================
# Email Configuration - MailHog (for local testing)
# ============================================================================
# MailHog catches all emails and provides a web UI at http://localhost:8025
SMTP_TLS="False"
SMTP_PORT="1025"
SMTP_HOST="localhost"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="noreply@iopex.ai"
EMAILS_FROM_NAME="iOPEX AI"

# ============================================================================
# Rate limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE="60"

# ============================================================================
# MFA Configuration
# ============================================================================
MFA_DEVICE_BYPASS_HOURS="24"
EMAIL_MFA_GRACE_PERIOD_DAYS="30"
# Grace period auto-enable - Options: "email", "sms", "totp", "none"
MFA_AUTO_ENABLE_METHOD="email"

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3002", "http://localhost:8004"]

# ============================================================================
# Trusted hosts
# ============================================================================
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ============================================================================
# AWS Configuration for SMS (optional for local development)
# ============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
# Custom sender ID for SMS
SMS_SENDER_ID=""

# ============================================================================
# Branding Configuration
# ============================================================================
# Primary color for email templates
# Default: e75f33 (ElevAIte orange). Change to e61e1e for Toshiba deployments
MFA_EMAIL_PRIMARY_COLOR="e75f33"

# Branding name used throughout the application
BRANDING_NAME="ElevAIte"
BRANDING_ORG="iOPEX"
BRANDING_SUPPORT_EMAIL="support@iopex.ai"

# ============================================================================
# Redis Configuration (optional for local development)
# ============================================================================
REDIS_ENABLED="false"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_DEBOUNCE_SECONDS="60"

