# Test Environment Configuration
# This file is used for integration testing with real services

# ============================================================================
# Database Configuration
# ============================================================================
SQLALCHEMY_DATABASE_URL=postgresql+asyncpg://auth_user:auth_password@localhost:5434/auth_db

# ============================================================================
# Security - Test Keys (DO NOT use in production!)
# ============================================================================
SECRET_KEY=test-secret-key-do-not-use-in-production
API_KEY_SECRET=test-secret-key-for-integration-tests
API_KEY_ALGORITHM=HS256

# ============================================================================
# Email Configuration - MailHog (catches all emails)
# ============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_TLS=false
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=test@example.com
EMAILS_FROM_NAME=Test Auth API

# ============================================================================
# Application URLs
# ============================================================================
FRONTEND_URI=http://localhost:3000
AUTH_API_PORT=8004

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8004

# ============================================================================
# Multitenancy
# ============================================================================
MULTITENANCY_ENABLED=true
DEFAULT_TENANT=default

# ============================================================================
# OPA Configuration
# ============================================================================
OPA_URL=http://localhost:8181
OPA_ENABLED=true
OPA_TIMEOUT=5.0

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_INACTIVITY_TIMEOUT_MINUTES=90
ACTIVITY_CHECK_INTERVAL_MINUTES=5
SESSION_EXTENSION_MINUTES=30

# ============================================================================
# MFA Configuration
# ============================================================================
MFA_AUTO_ENABLE_METHOD=email
MFA_DEVICE_BYPASS_HOURS=24
EMAIL_MFA_GRACE_PERIOD_DAYS=7

# ============================================================================
# Branding
# ============================================================================
BRANDING_NAME=ElevAIte Test
BRANDING_ORG=ElevAIte Test
BRANDING_SUPPORT_EMAIL=support@example.com

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
DEBUG=true

