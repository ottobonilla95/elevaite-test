# Workflow Engine Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (recommended for testing)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (alternative)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# AWS Bedrock Configuration (enterprise)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# BEDROCK_REGION=us-east-1

# On-Premise Configuration (custom deployments)
# ONPREM_USER=your_onprem_user
# ONPREM_SECRET=your_onprem_secret

# Workflow Engine Configuration
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8006

# Development Settings
PYTHONPATH=/home/johnbelly/work/elevaite/python_apps/workflow-engine-poc


# Database and persistence
# Primary DB for the workflow engine (PostgreSQL recommended; falls back to SQLite if unreachable)
WORKFLOW_ENGINE_DATABASE_URL=postgresql://elevaite:elevaite@localhost:5433/workflow_engine
# Optional pool tuning (defaults shown)
WORKFLOW_ENGINE_DB_POOL_SIZE=20
WORKFLOW_ENGINE_DB_MAX_OVERFLOW=50
WORKFLOW_ENGINE_DB_POOL_RECYCLE=1800
WORKFLOW_ENGINE_DB_POOL_TIMEOUT=30
SQL_ECHO=false

# DBOS durable execution (optional; if unset, engine uses WORKFLOW_ENGINE_DATABASE_URL)
DBOS_DATABASE_URL=postgresql://elevaite:elevaite@localhost:5433/workflow_engine
DBOS_APPLICATION_NAME=workflow-engine-poc

# Lightweight scheduler
SCHEDULER_POLL_SECONDS=15

# Environment label exposed to logs/metrics
ENVIRONMENT=development
