{
  "name": "E2E Webhook Minimal",
  "description": "Webhook trigger pass-through to agent",
  "steps": [
    { "step_id": "trigger", "step_type": "trigger", "parameters": { "kind": "webhook" } },
    {
      "step_id": "agent_webhook",
      "step_type": "agent_execution",
      "dependencies": ["trigger"],
      "config": {
        "agent_name": "WebhookAgent",
        "system_prompt": "Answer using the webhook data.",
        "query": "Web says: {trigger}"
      },
      "input_mapping": { "trigger": "trigger" }
    }
  ]
}

