{
  "name": "E2E Chat With Attachment",
  "description": "Chat trigger that accepts a small text attachment, then identity process",
  "steps": [
    {
      "step_id": "trigger",
      "step_type": "trigger",
      "parameters": {
        "kind": "chat",
        "allowed_modalities": ["doc"],
        "allowed_mime_types": ["text/plain"],
        "max_files": 2,
        "per_file_size_mb": 1,
        "total_size_mb": 2
      }
    },
    {
      "step_id": "echo",
      "step_type": "data_processing",
      "dependencies": ["trigger"],
      "config": { "processing_type": "identity" }
    }
  ]
}

