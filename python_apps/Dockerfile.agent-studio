FROM python:3.11-buster AS builder

# The installer requires curl (and certificates) to download the release archive
RUN apt-get update && apt-get install -y --no-install-recommends curl ca-certificates

# Download the latest installer
ADD https://astral.sh/uv/install.sh /uv-installer.sh

# Run the installer then remove it
RUN sh /uv-installer.sh && rm /uv-installer.sh

# Ensure the installed binary is on the `PATH`
ENV PATH="/root/.local/bin/:$PATH"

# Set up the workspace structure
WORKDIR /elevaite

# Copy workspace configuration
COPY pyproject.toml ./

# Copy the fastapi-logger package (workspace dependency)
COPY python_packages/fastapi-logger ./python_packages/fastapi-logger

# Copy agent-studio project files
COPY python_apps/agent_studio ./python_apps/agent_studio

# Install dependencies using uv in the agent-studio directory
WORKDIR /elevaite/python_apps/agent_studio

# Create virtual environment explicitly and install dependencies
RUN uv venv .venv && uv sync

# Debug: Check where the venv was created and what's in it
RUN ls -la /elevaite/python_apps/agent_studio/
RUN ls -la /elevaite/python_apps/agent_studio/.venv/

FROM python:3.11-slim-buster AS runtime

# Set up environment variables for the virtual environment
ENV VIRTUAL_ENV=/elevaite/python_apps/agent_studio/.venv \
    PATH="/elevaite/python_apps/agent_studio/.venv/bin:$PATH"

# Copy the virtual environment from builder
COPY --from=builder /elevaite/python_apps/agent_studio/.venv ${VIRTUAL_ENV}

# Set working directory
WORKDIR /elevaite

# Copy workspace configuration
COPY pyproject.toml ./

# Copy the fastapi-logger package (workspace dependency)
COPY python_packages/fastapi-logger ./python_packages/fastapi-logger

# Copy agent-studio application code
COPY python_apps/agent_studio ./python_apps/agent_studio

# Expose the port
EXPOSE 9004

# Set environment variable for port
ENV PORT=9004

# Change to the agent-studio directory and run the application
WORKDIR /elevaite/python_apps/agent_studio/agent-studio
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "9004"]
