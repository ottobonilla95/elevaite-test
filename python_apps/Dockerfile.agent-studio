FROM python:3.11-bullseye AS builder

# Install system dependencies and build tools
RUN apt-get update \
    && apt-get -y install --no-install-recommends apt-utils dialog 2>&1 \
    && apt-get -y install \
        git \
        openssh-client \
        less \
        iproute2 \
        procps \
        lsb-release \
        ca-certificates \
        libc6 \
        libgcc1 \
        libgssapi-krb5-2 \
        libicu67 \
        libssl1.1 \
        libstdc++6 \
        zlib1g \
        curl \
        wget \
        gnupg2 \
        software-properties-common \
        build-essential \
        libpq-dev \
        libssl-dev \
        libffi-dev \
        libbz2-dev \
        libreadline-dev \
        libsqlite3-dev \
        tk-dev \
        libncurses5-dev \
        libncursesw5-dev \
        xz-utils \
        llvm \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/*

# Download the latest uv installer
ADD https://astral.sh/uv/install.sh /uv-installer.sh

# Run the installer then remove it
RUN sh /uv-installer.sh && rm /uv-installer.sh

# Ensure the installed binary is on the `PATH`
ENV PATH="/root/.local/bin/:$PATH"

# Set up the workspace structure
WORKDIR /elevaite

# Copy workspace configuration
COPY pyproject.toml ./

# Copy workspace dependencies
COPY python_packages/fastapi-logger ./python_packages/fastapi-logger
COPY python_packages/elevaite_ingestion ./python_packages/elevaite_ingestion

# Copy agent-studio project files
COPY python_apps/agent_studio ./python_apps/agent_studio

# Install dependencies using uv in the agent-studio directory
WORKDIR /elevaite/python_apps/agent_studio

# Install dependencies using uv (this will create venv automatically)
RUN uv sync

FROM python:3.11-slim-bullseye AS runtime

# Install uv in runtime stage
RUN apt-get update && apt-get install -y curl && \
    curl -LsSf https://astral.sh/uv/install.sh | sh && \
    apt-get remove -y curl && \
    apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Ensure the installed binary is on the `PATH`
ENV PATH="/root/.local/bin/:$PATH"

# Copy the entire project structure from builder (including .venv and uv.lock)
COPY --from=builder /elevaite /elevaite

# Set working directory
WORKDIR /elevaite/python_apps/agent_studio

# Expose the port
EXPOSE 9004

# Set environment variable for port
ENV PORT=9004

# Create uploads directory
RUN mkdir -p /elevaite/python_apps/agent_studio/agent-studio/uploads

# Change to the agent-studio directory and run the application using uv
WORKDIR /elevaite/python_apps/agent_studio/agent-studio
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "9004"]
