{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "FUSIONAUTH_CLIENT_ID",
    "FUSIONAUTH_CLIENT_SECRET",
    "FUSIONAUTH_ISSUER",
    "FUSIONAUTH_URL",
    "FUSIONAUTH_API_KEY",
    "FUSIONAUTH_TENTANT_ID",
    "FUSIONAUTH_APPLICATION_ID",
    "NEXTAUTH_URL",
    "NEXTAUTH_URL_INTERNAL",
    "NEXT_PUBLIC_BACKEND_URL",
    "ELEVAITE_HOMEPAGE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": { "cache": false },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "docker": {
      "cache": false
    },
    "storybook": {}
  }
}
